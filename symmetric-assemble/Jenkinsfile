pipeline {
    agent {
    	label 'master'
    }

    parameters {
        string(name: 'Version', defaultValue: '1.0', description: 'Version Number X.Y.Z')
    }

    environment {
        MAVEN_JM_PW = credentials('mavenJumpMindPassword')
        SONAR_TOKEN = credentials('sonarTokenSymmetricDS')
    }

    stages {
        stage('Build') {
            steps {
                echo "Running ${env.BUILD_ID} on ${env.NODE_NAME} node"
                sh './gradlew compile'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('Quality') {
            steps {
                sh './gradlew sonarqube'
            }
        }
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                echo 'Deploying'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'build/libs/**/*.jar', fingerprint: true
            junit 'build/reports/**/*.xml'
        }
        success {
            slackSend channel: '#jumpmind-devops',
                  color: 'good',
                  message: "The pipeline ${currentBuild.fullDisplayName} completed successfully."
        }
        failure {
            //mail to: symmetricds@jumpmind.com, subject: 'The pipeline failed'
            slackSend channel: '#jumpmind-devops',
                  color: 'RED',
                  message: "The pipeline ${currentBuild.fullDisplayName} completed successfully."
        }
    }
}